@page "/categories/edit/{identifier:int}"
@inherits EditPageBase<Category, CategoryService, int?>

<h3>Edit Category</h3>

@if (Input == null)
{
    return;
}

<EditForm Model="Input">
    <div class="mb-2">
        <label>Name:</label>
        <InputText @bind-Value="Input.Name" class="form-control" />
    </div>
</EditForm>


<button class="btn btn-primary" @onclick="SaveAsync">Save</button>
<button class="btn btn-secondary" @onclick="CancelAsync">Cancel</button>

@code {
    protected override string GetListUrl() => "/categories";
}