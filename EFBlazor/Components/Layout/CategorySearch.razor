@inherits SearchComponentBase<Category, CategoryService, CategoryFilter>

<EditForm Model="Filter" OnValidSubmit="async () => await LoadAsync(true)">
    <div class="input-group mb-3">
        <InputText @bind-Value="Filter.SearchPhrase" class="form-control" placeholder="Name" />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</EditForm>

@if (Result is null)
{
    return;
}

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Result.Items)
        {
            <tr>
                <td>
                    <button type="button" class="btn btn-primary" @onclick="() => OnSelect.InvokeAsync(item)">Select</button>
                </td>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>